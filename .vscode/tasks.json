{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "Invoke-Build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Watch.Project",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "isBackground": true,
            "command": ".vscode/Execute-PesterWatcher.ps1 -Verbose",
            "problemMatcher": [
                {
                    "owner": "Watch.Project",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^\\s*(\\[-\\]\\s*.*?)(\\d+)ms\\s*$",
                            "message": 1
                        },
                        {
                            "regexp": "^\\s+at\\s+[^,]+,\\s*(.*?):\\s+line\\s+(\\d+)$",
                            "file": 1,
                            "line": 2
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^Invoking Watch\\.Project$",
                        "endsPattern": "^Passed:\\s\\d+\\sFailed:\\s\\d+\\sSkipped:\\s\\d+\\sPending:\\s\\d+\\sInconclusive:\\s\\d+\\s$"
                    }
                }
            ]
        }
    ]
}
